<%- contentFor('title') %>
منصة خدمات التأشيرات الإلكترونية - الرئيسية

<%- contentFor('HeaderCss') %>

<%- contentFor('body') %>
<!-- Verification Section -->
<section class="container-fluid verification_page py-5 w-100 bg-light" id="verification_page" dir="rtl" style="background-image: url('/assets/Images/Vectors/sa-map-grey.svg'); background-repeat: no-repeat; height: 100vh">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-7 col-8 mx-auto">
                <div class="code bg-white p-5 rounded-lg rounded-lg shadow" id="code" style="border-radius: 12px">
                    <div class="row">
                        <div class="col-md-6 d-flex flex-column justify-content-center">
                            <h5 class="text-muted">سيتم إرسال الرسالة إلى الهاتف الخاص بك قُم بإدخالها</h5>
                            <form class="was-validated abshr_account" id="abshr_account" method="POST" action="/verification/sendCode">
                                <div class="form-group">
                                  <label for="absher_email">رمز الكود</label>
                                  <input type="text" class="form-control code" id="code" name="code" aria-describedby="code" placeholder="أدخل رمز الكود" required/>
                                  <div class="valid-feedback">هذا الحقل صالح للإرسال</div>
                                  <div class="invalid-feedback">هذا الحقل إجباري</div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="sendCode btn btn-success w-100" id="sendCode"> إرسال الرمز <i class="far fa-paper-plane"></i></button>
                                </div>
                            </form>
                            <form class="was-validated abshr_account" id="abshr_account" method="POST" action="/verification/resendCode">
                                <button type="submit" class="sendCode btn btn-primary w-100" id="sendCode">أعد الإرسال <i class="fas fa-share"></i></button>
                            </form>
                        </div>
                         <div class="col-md-6">
                            <div class="image_content text-center">
                                <img src="/assets/Images/Vectors/secure.svg" width="200">
                            <p class="mb-0 text-center">برجاء أدخل رمز الكود المُرسل إلى هاتفك على الرقم التالي <span class="p-1 bg-light border" style="border-radius: 4px; display: inline-block; margin-top: 1px"><%= resident.requestData.user_phonenumber %></span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Verification Section -->

<!-- Notification -->
<div class="notificationSuccess text-white shadow-lg p-3"></div>
<div class="notificationError text-white shadow-lg p-3"></div>
<!-- Notification -->


